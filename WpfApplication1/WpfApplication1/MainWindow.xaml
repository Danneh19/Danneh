<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="750">
    <Grid>
        <Canvas x:Name="drawCanvas" HorizontalAlignment="Left" Height="500" Margin="10,61,0,0" VerticalAlignment="Top" Width="725" Background="#FFCBCBCB" MouseRightButtonUp="drawCanvas_MouseRightButtonUp" MouseLeftButtonUp="drawCanvas_MouseLeftButtonUp" MouseWheel="drawCanvas_MouseWheel"/>
        <ComboBox x:Name="ShapesBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="267" Height="46" FontSize="32" SelectedIndex="-1"/>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="298,10,0,0" VerticalAlignment="Top" Width="125" Height="46" Click="Save_Click"/>
        <Button x:Name="Clear" Content="Clear" HorizontalAlignment="Left" Margin="449,10,0,0" VerticalAlignment="Top" Width="125" Height="46"/>
        <Button x:Name="btnLoad" Content="Load" HorizontalAlignment="Left" Margin="594,10,0,0" VerticalAlignment="Top" Width="126" Height="46" Click="btnLoad_Click"/>

    </Grid>
</Window>
